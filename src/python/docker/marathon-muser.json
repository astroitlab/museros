[{
    "id": "/muser/confweb",
    "cpus": 0.5,
    "mem": 128.0,
    "instances": 1,
    "executor": "",
    "requirePorts":true,
    "ports" :[31201],
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "cnlab/muser:run",
            "network": "HOST",
            "privileged": true,
            "parameters": [
                { "key": "user", "value": "muser" }
            ]
        },
        "volumes": [
			    {
			      "containerPath": "/opt",
			      "hostPath": "/opt",
			      "mode": "RW"
			    },
			    {
			      "containerPath": "/work/opencluster",
			      "hostPath": "/work/opencluster",
			      "mode": "RW"
			    },
			    {
			      "containerPath": "/bin/scripts",
			      "hostPath": "/opt/work/museros/python/docker/base/scripts",
			      "mode": "RW"
			    }
        ]
    },
    "healthChecks": [
        {
            "gracePeriodSeconds": 3,
            "intervalSeconds": 30,
            "timeoutSeconds": 30,
            "protocol": "COMMAND",
            "command": { "value": "curl -f -X GET http://$HOST:31201/api/health" },
            "maxConsecutiveFailures": 3
        }
    ],
    "backoffSeconds": 1,
    "backoffFactor": 1.15,
    "maxLaunchDelaySeconds": 3600,
    "env": {
        "APP": "MuserConfWeb"
    }
},

