<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" ?>
<muserxml xmlns="http://www.cnlab.net/schema/psetTypes.html"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.cnlab.net/schema/muser.xsd
      file:///opt/muser/code/xmlcasa/xml/muser.xsd">

<task type="function" name="listuvfits" category="import/export">
	<shortdescription>List UVFITS file information by a specified date</shortdescription>
	<description>
        List UVFITS file information by a specified date
	</description>
	<input>
		<param type="int" name="muser">
			<description>Sub array ID (1 - low/ 2:high)</description>
			<value>1</value>
                        <example>muser=1</example>
		</param>

		<param type="xs:dateTime" name="start">
			<description>The start date and time of MUSER raw data</description>
			<value></value>
                        <example>start='2016-02-18 09:30:10.5'</example>
		</param>
                <constraints>
                </constraints>

		<param type="int" name="debug">
			<description>Display increasingly verbose debug messages</description>
			<value>0</value>
                        <example>debug=1</example>
		</param>
                <constraints>
                </constraints>
	</input>
<returns type="void"/>

<example>

        listuvfits(muser=1, start='2015-11-1 12:08:50', debug=1)

 </example>
 </task>
 </muserxml>
